#    - etc.

# Market Data APIs
VITE_CMC_API_KEY_PRIMARY=your_coinmarketcap_key_here
VITE_CMC_API_KEY_BACKUP=your_backup_cmc_key_here
VITE_CRYPTOCOMPARE_KEY=your_cryptocompare_key_here

# Block Explorers
VITE_ETHERSCAN_KEY=your_etherscan_key_here
VITE_BSCSCAN_KEY=your_bscscan_key_here
VITE_TRONSCAN_KEY=your_tronscan_key_here

# News & Data
VITE_NEWSAPI_KEY=your_newsapi_key_here

# Optional: Whale Tracking (if available)
VITE_WHALEALERT_KEY=your_whalealert_key_here

# ===========================================
# API CONFIGURATION
# ===========================================

# Enable/disable real API calls (feature flag)
VITE_USE_REAL_APIS=false

# Enable request caching
VITE_ENABLE_API_CACHE=true

# Cache TTL in seconds
VITE_CACHE_TTL=30

# Rate limiting (requests per minute)
VITE_API_RATE_LIMIT=60

# Circuit breaker threshold (failures before opening circuit)
VITE_CIRCUIT_BREAKER_THRESHOLD=5

# Enable detailed logging
VITE_API_DEBUG_LOGGING=false

# ===========================================
# LEGACY CONFIGURATION (for backward compatibility)
# ===========================================

# CoinGecko API (Free tier - no key required)
VITE_COINGECKO_API_URL=https://api.coingecko.com/api/v3

# Binance API (Optional - for more detailed data)
VITE_BINANCE_API_URL=https://api.binance.com/api/v3

# News API (Legacy)
VITE_NEWS_API_KEY=your_news_api_key_here
VITE_NEWS_API_URL=https://newsapi.org/v2

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Application Configuration
VITE_APP_NAME=Bolt AI Crypto
VITE_UPDATE_INTERVAL=5000
VITE_CHART_DATA_POINTS=100

# ===========================================
# MONITORING (Optional)
# ===========================================

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Analytics endpoint
VITE_ANALYTICS_ENDPOINT=
