# API Keys - Replace with your actual keys
API_KEY_COINMARKETCAP=your_key_here
API_KEY_COINGECKO=your_key_here
API_KEY_CRYPTOCOMPARE=your_key_here
WHALEALERT_KEY=your_whalealert_key_here
NEWSAPI_KEY=your_newsapi_key_here

# Security
JWT_SECRET=change_this_secret
CORS_CREDENTIALS=true

# Database
DATABASE_URL=sqlite+aiosqlite:///./crypto_ai.db

# CORS Origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Application
APP_NAME=Bolt AI Crypto API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
API_PREFIX=/api

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# External APIs
COINGECKO_API_URL=https://api.coingecko.com/api/v3
BINANCE_API_URL=https://api.binance.com/api/v3
BINANCE_WS_URL=wss://stream.binance.com:9443/ws

# Telegram Bot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@boltaicrypto.com

# AI Model
MODEL_PATH=./models
MODEL_VERSION=1.0.0
TRAINING_ENABLED=true
RETRAINING_INTERVAL_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Monitoring
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO